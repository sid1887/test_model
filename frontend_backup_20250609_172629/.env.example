# Frontend Environment Configuration for Cumpair Backend Integration

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_TIMEOUT=30000

# Image Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Feature Flags
NEXT_PUBLIC_ENABLE_REAL_TIME_SEARCH=true
NEXT_PUBLIC_ENABLE_PRICE_ALERTS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Search Configuration
NEXT_PUBLIC_DEFAULT_SEARCH_SITES=amazon,walmart,ebay
NEXT_PUBLIC_MIN_SIMILARITY_SCORE=0.7
NEXT_PUBLIC_MAX_SEARCH_RESULTS=20

# Development Settings
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_LEVEL=info

# Production Settings (comment out for development)
# NEXT_PUBLIC_API_URL=https://your-production-api.com
# NEXT_PUBLIC_DEBUG_MODE=false
# NEXT_PUBLIC_LOG_LEVEL=error
